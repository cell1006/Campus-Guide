page {
  height: 80%;
  width: 100%;
}

.header {
  position: fixed;
  overflow: hidden;
  width: 100%;
  height: 450rpx;
  border-radius: 0 0 20rpx 20rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  top: 0;
  /* padding-bottom: 60%; */
  z-index: 1;
  transition: height 0.2s ease;
}

.header.hide {
  height: 200rpx;
}

.left {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  left: 0;
  bottom: 5%;
}

.header.hide .img-container {
  display: none;
}

.title {
  position: absolute;
  left: 7%;
  bottom: 5%;
  font-size: 40rpx;
  color: white;
}

.img-container {
  position: absolute;
  width: 20%;
  height: 0;
  bottom: 10%;
  right: 5%;
  background: white;
  border-radius: 50%;
  padding-bottom: 20%;
  overflow: hidden;
}

.img {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
