page {
  height: 100%;
  width: 100%;
}

.space {
  height: 20%;
}

.list-container {
  height: 20%;
  width: 90%;
  margin: auto;
  margin-top: 5%;
  margin-bottom: 5%;
  animation: come ease 1s forwards;
}

.list {
  display: flex;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  padding: 5%;
  border-radius: 10rpx;
  box-shadow: 0px 0px 6px #f2edf0;
}

.avatar {
  box-sizing: border-box;
  height: 100%;
  width: 10.9375vh;
  margin-right: 5%;
  border-radius: 10rpx;
  overflow: hidden;
  background: #eee;
}

.img {
  height: 100%;
  width: 100%;
}

.info-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.name {
  color: #cdcdcd;
  font-size: 35rpx;
}

.school {
  color: #cdcdcd;
  font-size: 30rpx;
}

.label-container {
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 100%;
  margin-top: 2%;
}

.label {
  display: flex;
  align-items: center;
  height: 20rpx;
  padding: 3%;
  color: white;
  border-radius: 10rpx;
  background: #fada1b;
}

@keyframes come {
  0% {
    transform: scale(0);
    opacity: 0;
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}
